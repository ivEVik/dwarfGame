<animations>
	<anim>
		<action>idle</action>
		<dir>0</dir>
		<frames>
			<frame>
				<image>blob-idle-0</image>
				<delay>100</delay>
			</frame>
		</frames>
	</anim>
	<anim>
		<action>move</action>
		<dir>0</dir>
		<frames>
			<frame>
				<image>blob-move-left-0</image>
				<delay>2</delay>
			</frame>
			<frame>
				<image>blob-move-left-1</image>
				<delay>2</delay>
			</frame>
		</frames>
	</anim>
	<anim>
		<action>move</action>
		<dir>3</dir>
		<frames>
			<frame>
				<image>blob-move-left-0</image>
				<delay>2</delay>
			</frame>
			<frame>
				<image>blob-move-left-1</image>
				<delay>2</delay>
			</frame>
		</frames>
	</anim>
	<anim>
		<action>move</action>
		<dir>1</dir>
		<frames>
			<frame>
				<image>blob-move-right-0</image>
				<delay>2</delay>
			</frame>
			<frame>
				<image>blob-move-right-1</image>
				<delay>2</delay>
			</frame>
		</frames>
	</anim>
	<anim>
		<action>move</action>
		<dir>2</dir>
		<frames>
			<frame>
				<image>blob-move-right-0</image>
				<delay>2</delay>
			</frame>
			<frame>
				<image>blob-move-right-1</image>
				<delay>2</delay>
			</frame>
		</frames>
	</anim>
</animations>
